; Top-most EditorConfig file
root = true

[*]


; 4-column space indentation
[*.cs]
indent_style = space
indent_size = 2
end_of_line = crlf

; 2-column tab indentation
[*.js]
indent_style = space
indent_size = 4
end_of_line = crlf

; 2-column tab indentation
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf